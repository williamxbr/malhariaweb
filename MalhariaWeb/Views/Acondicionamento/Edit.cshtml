@model MalhariaWeb.Models.ACONDICIONAMENTO

@{
    Layout = "~/Views/_LayoutMalhariaWeb.cshtml";
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-md-4">

        <ul class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Cadastro</li>
            <li>Acondicionamento</li>
        </ul>
        @using (Html.BeginForm("Edit", "Acondicionamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)
            <div class="panel panel-primary">
                <div class="panel-heading">Acondicionamentos</div>
                <div class="panel-body">
                    @Html.HiddenFor(model => model.ID_ACONDICIONAMENTO)
                    <div class="form-group">
                        @Html.LabelFor(model => model.NOME_ACONDICIONAMENTO, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.NOME_ACONDICIONAMENTO, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NOME_ACONDICIONAMENTO)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.VALOR, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.VALOR, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.VALOR)
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-success" value="Salvar" />
                </div>
            </div>
        }
    </div>
