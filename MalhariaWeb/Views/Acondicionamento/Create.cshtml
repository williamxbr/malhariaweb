@model MalhariaWeb.Models.ACONDICIONAMENTO

@{
    Layout = "~/Views/_LayoutMalhariaWeb.cshtml";
    ViewBag.Title = "Malharia Web - Cadastrando Acondicionamento";
}

<div class="row">
    <div class="col-md-4">

        <ul class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Cadastro</li>
            <li>@Html.ActionLink("Acondicionamento", "Index", "Acondicionamento")</li>
            <li class="active">Novo</li>
        </ul>

        <div class="panel panel-primary">
            <div class="panel-heading">Inclusão de Acondicionamento</div>

            @using (Html.BeginForm("Create", "Acondicionamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true)
                <div class="panel-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.NOME_ACONDICIONAMENTO, new { @class = "col-md-2 control-label" })
                        @Html.TextBoxFor(model => model.NOME_ACONDICIONAMENTO, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NOME_ACONDICIONAMENTO)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.VALOR, new { @class = "col-md-2 control-label" })
                        @Html.TextBoxFor(model => model.VALOR, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VALOR)
                    </div>
                </div> 
                    
                <div class="panel-footer">
                    <p>
                        <button class="btn btn-danger" type="reset" value="Cancelar" location.href='@Url.Action("Index")'>Cancelar</button>
                        <button class="btn btn-success" type="submit" value="Salvar">Salvar</button>
                    </p>
                </div>
            }


        </div>
