<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>MalhariaWeb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">


    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/img/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/img/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/img/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="img/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="~/img/favicon2.png">

    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-confirm.js"></script>
    <script type="text/javascript" src="~/js/bootbox.min.js"></script>
</head>

<body style="padding : 70px">
    <div class="container">
        <div class="row">
            <div class="col-md-12 column">
                <!--<nav class="navbar navbar-inverse" role="navigation"> -->
                <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Cadastro<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Acondicionamento", "Index", "Acondicionamento")</li>
                                    <li>@Html.ActionLink("Cor", "Index", "Cor")</li>
                                    <li>@Html.ActionLink("Deposito", "Index", "Deposito")</li>
                                    <li>@Html.ActionLink("Linha de Produto", "Index", "LinhaProduto")</li>
                                    <li>@Html.ActionLink("Maquinas", "Index", "Maquinas")</li>
                                    <li>@Html.ActionLink("Operador", "Index", "Operador")</li>
                                    <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                                    <li>@Html.ActionLink("Unidade de Medida", "Index", "UnidadeMedida")</li>
                                    <li>@Html.ActionLink("Pessoa", "Index", "Pessoa")</li>
                                    <li>@Html.ActionLink("Parametros", "Altera", "Parametro", new { id = 1 }, null)</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Pedido<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Pedido", "Index", "Pedido")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Ordem de Malharia<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Programar", "Novo", "OrdemMalharia")</li>
                                    <li>@Html.ActionLink("Emitir", "Programado", "OrdemMalharia")</li>
                                </ul>

                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Ordem Acabamento<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Programar", "Create", "OrdemAcabamento")</li>
                                    <li>@Html.ActionLink("Emitir", "Programado", "OrdemAcabamento")</li>
                                    <li>@Html.ActionLink("Receber", "Producao", "OrdemAcabamento")</li>
                                    <li>@Html.ActionLink("Revisão", "Retornado", "OrdemAcabamento")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Peças<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Pesagem de Pecas Cruas", "CreatePecaCrua", "Pecas")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Romaneio<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Gerar Romaneio", "GerarRomaneio", "Romaneio")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Relatorios<strong class="caret"></strong></a>
                                <ul class="dropdown-menu"></ul>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Usuario<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Usuario", "Lista", "Usuario")</li>
                                </ul>
                            </li>
                        </ul>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated) 
                        { 
                            <p class="navbar-text navbar-right">Logado como <span class="glyphicon glyphicon-user"> <a href="/Usuario/Logout" class="navbar-link">@HttpContext.Current.User.Identity.Name</a></p>
                        }
                        else
                        {
                            <p class="navbar-text navbar-right"><span class="glyphicon glyphicon-user"> <a href="/Usuario/LogOn" class="navbar-link">Logar</a></p>
                        }    
                    </div>
                </nav>

            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
