@model MalhariaWeb.Models.USUARIO
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutMalhariaWeb.cshtml";
}

<div class="row">
    <div class="col-md-4">

        <ul class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>Login</li>
        </ul>


        @using (Html.BeginForm("Login", "Usuario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true, String.Empty, new { @class = "alert alert-danger" })
            
            <div class="panel panel-primary">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NOME_USUARIO, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                @Html.TextBoxFor(model => model.NOME_USUARIO, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SENHA, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.SENHA, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-success" value="Entrar" />
                </div>
            </div>

        }
    </div>
</div>
