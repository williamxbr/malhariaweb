@model IEnumerable<MalhariaWeb.Models.PESSOA>
@{
    ViewBag.Title = "Pessoa";
    Layout = "~/Views/_LayoutMalhariaWeb.cshtml";
}

<div class="row">

    <div class="col-md-4">
        <ul class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>Pessoa</li>
        </ul>

        <div class="panel panel-primary">
            <div class="panel-heading">Pessoa</div>
            <div class="panel-body">


                <p>
                    <input type="button" class="btn btn-success" title="Delete" value="Novo" onclick="location.href='@Url.Action("Create")    '" />
                    <button class="btn btn-danger" onclick="DeletePessoa()">Excluir</button>
                </p>

                <div>
                    @{
                        WebGrid grid = new WebGrid(ajaxUpdateContainerId: "gridContent", rowsPerPage : 4);
                        grid.Bind(source: Model, columnNames: new string[] { "NOME_PESSOA" });    
                    }
                    <div id="gridContent">

                        @grid.GetHtml(
                               htmlAttributes: new { @class = "table table-bordered" },
                               columns: grid.Columns(
                                                     grid.Column("", format: @<text>@Html.CheckBox("chk")</text>),
                                                     grid.Column("NOME_PESSOA", "Pessoa"),
                                                     grid.Column(header: "Ação", format: @<text><a href="@Url.Action("Edit", new { id = item.ID_PESSOA })" title="Edit">
                                                         <img src="~/img/edit.png" /></a></text>)
                                                     )
                              )
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
